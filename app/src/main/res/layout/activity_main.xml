<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="16dp"
    tools:context="com.pariaslab.callun.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fase lunar"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/selectDateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="Fecha"
        android:clickable="true"
        android:focusable="false"
        android:gravity="top|center_horizontal"
        android:hint="Seleccionar fecha"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/moonIcon"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:rotation="180.0"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Moon phase" />

    <TextView
        android:id="@+id/moonPhaseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moonPhaseTxtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextFMTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/design_default_color_error"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
